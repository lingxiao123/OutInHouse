<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="往来单位:"/>
        <TextView android:id="@+id/txt_units" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="18sp" android:textColor="#1E90FF"/>
    </LinearLayout>
	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginLeft="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="验货单据:"/>
        <TextView android:id="@+id/txt_bill" android:layout_width="wrap_content" android:layout_height="wrap_content"  android:textColor="#1E90FF"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginLeft="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="日期:"/>
        <TextView android:id="@+id/txt_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#1E90FF"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_marginLeft="10dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="类型:"/>
        <TextView android:id="@+id/txt_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#1E90FF" />
    </LinearLayout>
</LinearLayout>
