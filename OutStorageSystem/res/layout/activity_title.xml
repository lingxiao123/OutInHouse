<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3D3D3"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="单据编号*" />

            <EditText
                android:id="@+id/number"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:paddingLeft="5dp"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:id="@+id/datebutton"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="生单类型" />

            <EditText
                android:id="@+id/billtype"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="2"
                android:background="@drawable/shape"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="源单编码" />

            <EditText
                android:id="@+id/sourceVoucherCode"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="日期" />

            <EditText
                android:id="@+id/dates"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_point"
                android:paddingLeft="5dp" />
            <!--
                <Spinner android:id="@+id/sp_person"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_point"
                android:paddingLeft="5dp" 
                />
            -->
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="客户" />

            <EditText
                android:id="@+id/customer"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_point"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="部门" />

            <EditText
                android:id="@+id/deportment"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_point"
                android:paddingLeft="5dp" />
            <!--
                <Spinner android:id="@+id/sp_businesstype"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_point"
                android:paddingLeft="5dp" 
                />
            -->
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="经手人" />

            <Spinner
                android:id="@+id/sp_person"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_point"
                android:paddingLeft="5dp" />
            <!--
                <EditText
                android:id="@+id/type"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_point"
                android:hint="组装入库"
                android:paddingLeft="5dp" />
            -->
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="制单人" />

            <EditText
                android:id="@+id/zdpeople"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="出库类别" />

            <EditText
                android:id="@+id/outhousetype"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:paddingLeft="5dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp" >

            <TextView
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="#A9A9A9"
                android:gravity="center"
                android:text="备注" />

            <EditText
                android:id="@+id/remark"
                android:layout_width="fill_parent"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shape"
                android:paddingLeft="5dp" />
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tableLayout1"
        android:gravity="center" >

        <Button
            android:id="@+id/upload"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:text="上传" />
    </LinearLayout>

</RelativeLayout>