<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="5dp">
        	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        	        android:text="单号:"/>
        	    <TextView android:id="@+id/tv_productnumber" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00CDCD"/>
        	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        	        android:text="状态:"/>
        	    <TextView android:id="@+id/tv_state" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00CDCD"/> 
        	</LinearLayout>
        	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="5dp">
        	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        	        android:text="日期:"/>
        	    <TextView android:id="@+id/tv_date" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00CDCD"/>
        	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        	        android:text="业务员:"/>
        	    <TextView android:id="@+id/tv_person" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00CDCD"/> 
        	</LinearLayout>
        	<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginLeft="5dp">
        	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        	        android:text="部门:"/>
        	    <TextView android:id="@+id/tv_department" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00CDCD"/>
        	    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        	        android:text="入库类型:"/>
        	    <TextView android:id="@+id/tv_type" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#00CDCD"/> 
        	</LinearLayout>
    </LinearLayout>
</LinearLayout>
