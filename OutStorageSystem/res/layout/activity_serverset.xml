<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="#DCDCDC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	   <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="40dp"
    	android:background="#1C86EE"
    	android:orientation="horizontal">
       	   		<LinearLayout 
	   		 	android:layout_width="fill_parent" 
		        android:layout_height="fill_parent"
		    	android:orientation="vertical"
		    	android:layout_weight="2">
	   		    	<ImageView android:id="@+id/img_return" android:layout_width="20dp" android:layout_height="20dp" android:layout_marginLeft="5dp"  android:layout_marginTop="7dp" android:layout_gravity="left"   android:src="@drawable/ic_return"></ImageView>  
	   		</LinearLayout>
	   		<LinearLayout
	   		 	android:layout_width="fill_parent" 
		        android:layout_height="fill_parent"
		    	android:orientation="vertical"
		    	android:layout_weight="1">
	   		   	      <TextView android:layout_width="wrap_content"  android:layout_gravity="left" android:paddingTop="5dp" android:layout_marginLeft="30dp" android:layout_height="wrap_content"  android:textSize="18sp"  android:text="服务器配置" android:textColor="@android:color/white"></TextView>
	   		</LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
     	android:layout_height="wrap_content"
     	android:orientation="vertical" 
     	android:layout_marginTop="20dp"
     >
            <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="13dp"
            >
           <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="服务器地址:"/>
   		<EditText
		    android:id="@+id/address"
		    android:layout_width="200dp"
		    android:layout_height="30sp"
		    android:background="@drawable/editsharp"
		    android:ems="10"
		    android:inputType="text" >
	    </EditText>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp" android:layout_marginLeft="41dp">
           <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="端口号:"/>
   		<EditText
		    android:id="@+id/port"
		    android:layout_width="200dp"
		    android:layout_height="30sp"
		    android:background="@drawable/editsharp"
		    android:ems="10"
		    android:text="1433"
		    android:inputType="text" >
	    </EditText>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
           <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="数据库登录名:"/>
   		<EditText
		    android:id="@+id/dbusername"
		    android:layout_width="200dp"
		    android:layout_height="30sp"
		    android:text="sa"
		    android:background="@drawable/editsharp"
		    android:ems="10"
		    android:inputType="text" >
	    </EditText>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            >
           <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="数据库密码:"/>
   		<EditText
		    android:id="@+id/dbpwd"
		    android:layout_width="200dp"
		    android:layout_height="30sp"
		    android:background="@drawable/editsharp"
		    android:ems="10"
		    android:inputType="textPassword"
		 >
	    </EditText>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            >
	    <Button android:id="@+id/btnsave"
	        android:layout_width="150dp" android:layout_height="40dp" android:text="保存" android:textColor="#FFFFFF" android:textSize="18sp"
	        android:background="@drawable/basebtn"
	        android:layout_gravity="center"
	        />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
